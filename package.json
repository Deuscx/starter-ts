{
  "name": "pkg-name",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.3.0",
  "author": "Deuscx",
  "license": "MIT",
  "funding": "https://github.com/sponsors/deuscx",
  "homepage": "https://github.com/deuscx/pkg-name#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deuscx/pkg-name.git"
  },
  "bugs": "https://github.com/deuscx/pkg-name/issues",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp && npm publish",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:update": "vitest -u"
  },
  "devDependencies": {
    "@deuscx/eslint-config": "^0.0.7",
    "bumpp": "^8.2.1",
    "eslint": "^8.27.0",
    "lint-staged": "^13.0.3",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4",
    "vite": "3.2.3",
    "vite-plugin-inspect": "^0.7.7",
    "vitest": "^0.25.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
